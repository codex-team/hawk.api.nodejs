    "@hawk.so/types": "^0.1.22",
    "@types/amqp-connection-manager": "^2.0.4",
    "@types/bson": "^4.0.5",
    "@types/debug": "^4.1.5",
    "@types/escape-html": "^1.0.0",
    "@types/graphql-upload": "^8.0.11",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/mime-types": "^2.1.0",
    "@types/mongodb": "^3.6.20",
    "@types/node": "^16.11.46",
